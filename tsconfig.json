{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",                                 
    "lib": ["es2019"],                                   
    "module": "commonjs", 
    "rootDir": "/",                                  
    "outDir": "./tmp",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                     
    "noImplicitAny": true,                               
    "skipLibCheck": true                                 
  }
}